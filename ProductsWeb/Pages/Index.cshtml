@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<h2>Product List</h2>

<form method="post">
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Filter by name" aria-label="Filter" aria-describedby="basic-addon2" name="filter">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit">Filter</button>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>
                    <a class="btn btn-primary" asp-page="./ModalPages/Edit" asp-route-id="@product.Id">Edit</a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@product.Id" onsubmit="return confirm('Are you sure you want to delete this book? This may lead to severe data loss of relations in database !');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="back-btn">
    <a href="./ModalPages/Create" class="btn btn-primary add-btn">Add</a>
</div>